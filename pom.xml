          </snapshots>
          <id>central2</id>
          <name>plugins-release</name>
          <url>https://repo1.maven.org/maven2/</url>
        </pluginRepository>
        <pluginRepository>
          <snapshots />
          <id>snapshots2</id>
          <name>plugins-snapshot</name>
          <url>https://repo1.maven.org/maven2/</url>
        </pluginRepository>
    </pluginRepositories>

